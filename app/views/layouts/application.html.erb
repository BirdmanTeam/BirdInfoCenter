<!DOCTYPE html>
<html>
<head>
  <title>BirdInfoCenter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
    <p>Hello,
      <% if current_user.admin? %>
          admin
      <% else %>
          user
      <% end %>
      , <%= current_user.email %> - <%= link_to 'Sign_out', destroy_user_session_path, :method => 'delete' %></p>
    <%= link_to 'Update news', :controller => 'news', :action => 'parse_news' %>
<% end %>

<%= yield %>

</body>
</html>
