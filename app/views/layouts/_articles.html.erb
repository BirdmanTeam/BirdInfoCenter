<% if collection.empty? %>
    <div class="no-articles-container">
        <h1 class="no-articles">There are not news</h1>
    </div>
<% end %>
<% collection.each do |article| %>
    <%= link_to news_path(article), :class => 'article' do %>
        <section>
            <% if article.photo != 'none' %>
                <%= image_tag article.photo %>
            <% elsif article.video != 'none'%>
                <%= image_tag 'http://o.aolcdn.com/portaleu/p5/forms/4027/71b59df9-e738-4fd1-826a-65399f83f4c7.jpg' %>
            <% else %>
                <%= image_tag 'http://www.gobizkorea.com/catalog/images/common/no_article1.gif' %>
            <% end %>
            <article>
                <header>
                    <h2><%= article.name %></h2>
                    <time datetime="" ><%= article.date.strftime('%d.%m.%Y') %></time>
                </header>
                <article>
                    <p><%= article.description.truncate(220, separator:' ') %></p>
                </article>
            </article>
        </section>
    <% end %>
<% end %>