<section class="content-wrapper cf">
	<article class="articles-wrapper">
		<section class="article-type-2">
		    <header>
                <h2><%= @article.name %></h2>
				<time datetime="" ><%= @article.date.strftime('%B, %e %Y') %></time>
				<blockquote>
  					<p><%= @article.description %></p>
 			 		<footer><%= link_to '<' + @article.branch + '>', music_path %></footer>
			    </blockquote>
		    </header>
		</section>
	</article>
	<aside class="cf" id="sidebar">
		<section>
			<h1>Popular</h1>
              <% counter = 0 %>
              <% @news.each do |article| %>
                  <% if article.popular %>
                      <div class="news-item"><%= link_to article.name, news_path(article) %><a href="#">(5)</a></div>
                  <% end %>
                  <% break if (counter += 1) == 3 %>
              <% end %>
		</section>

          <div class="weather">
       <%=raw @weather_api %>
    </div>
	</aside>

</section>
