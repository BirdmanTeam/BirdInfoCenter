<div id="popular-news">
    <% counter = 0 %>
    <% collection.each do |article| %>
        <% if article.popular %>
            <div class="news-item"><%= link_to article.name, news_path(article) %>
              <%= link_to "(#{article.id})", news_path(article), class: 'article-id' %>
            </div>
        <% end %>
        <% break if (counter += 1) == 3 %>
    <% end %>
</div>